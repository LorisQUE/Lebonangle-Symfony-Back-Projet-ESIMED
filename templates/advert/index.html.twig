{% extends 'base.html.twig' %}

{% block title %}Hello AdvertController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <br/>

    <h1>Annonces</h1>

    <hr>

    <table class="table text-center table table-hover table-bordered" style="width: 100%">
        <thead>
        <tr>
            <th>#</th>
            <th>Catégorie</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>E-Mail</th>
            <th>Prix</th>
            <th>Publié le</th>
            <th>Nombre d'images</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for advert in adverts %}
            <tr>
                <td>{{ advert.id }}</td>
                <td>{{ advert.id }}</td>
                <td>{{ advert.title }}</td>
                <td>{{ advert.author }}</td>
                <td>{{ advert.email }}</td>
                <td>{{ advert.price }}€</td>
                <td>{{ advert.publishedAt |date("d/m/Y H:i:s") }}</td>
                <td>{{ advert.id }}</td>
                <td>{{ advert.content }}</td>
                <td style="display: flex; justify-content: space-evenly;">
                    <a class="btn btn-primary" href="#"><i class="fas fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-primary" href="#">Ajouter une leçon</a>{% endif %}
{% endblock %}
