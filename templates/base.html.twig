<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </head>
    <body>
    {% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" >Lebonangle</a>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Annonces</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">Catégories</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path("admin_user_index") }}">Admin</a>
                </li>
                {% endif %}
            </ul>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}<a class="btn btn-primary" style="float: right;" href="{{ path('app_logout') }}">Déconnexion</a>
        {% else %}
            <a class="btn btn-primary" style="float: right;" href="{{ path('app_login') }}">Connexion</a>
        {% endif %}
    </nav>
    {% endblock %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
        {% block javascripts %}<script src="https://kit.fontawesome.com/2ac05b7c9b.js" crossorigin="anonymous"></script>{% endblock %}
    </body>
</html>
